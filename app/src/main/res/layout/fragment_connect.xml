<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ag.ndn.ndnoverwifidirect.fragment.ConnectFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:id="@+id/textView9"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Status: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        tools:text="Status:"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:text="initializing..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView10"
        android:layout_marginStart="12dp"
        android:id="@+id/statusText"
        tools:text="initializing..." />

    <Switch
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statusText"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp"
        android:id="@+id/serviceSwitch" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/connectedPeersListView"
        android:layout_below="@+id/discoverPeersBtn"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Refresh peers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/discoverPeersBtn"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

</RelativeLayout>
